{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Ville</th>
            <th scope="col">Rue</th>
            <th scope="col">Code Postal</th>
        </tr>

        </thead>
        <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td>
                        {{ adresse.ville }}
                    </td>
                    <td>
                        {{ adresse.rue }}
                    </td>
                    <td>
                        {{ adresse.codePostal }}
                    </td>
                    <td>
                        <a href="{{ path('admin_adresse_edit', {'id': adresse.id}) }}" class="btn btn-xs bt">editer adresses</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}